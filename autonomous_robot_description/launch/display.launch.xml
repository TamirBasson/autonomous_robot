<launch>
    <!-- Define paths for URDF and RViz config -->
    <let name="urdf_path" 
         value="$(find-pkg-share autonomous_robot_description)/urdf/autonomous_robot.urdf.xacro" />
         
    <let name="rviz_config_path"
         value="$(find-pkg-share autonomous_robot_description)/rviz/urdf_config.rviz" />

    <!-- Robot State Publisher -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher" output="screen">
        <param name="robot_description" 
               value="$(command 'xacro $(var urdf_path)')" />
    </node>
    
    <!-- Gazebo Launch -->
    <include file="$(find-pkg-share aws_robomaker_small_warehouse_world)/launch/no_roof_small_warehouse.launch.py">
     <arg name="world_name" value="$(find-pkg-share aws_robomaker_small_warehouse_world)/worlds/no_roof_small_warehouse.world" />
    </include>

    <!-- Joint State Publisher GUI -->
    <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui" />

    <!-- Spawn the robot entity in Gazebo -->
    <node pkg="gazebo_ros" exec="spawn_entity.py" 
          output="screen"
          args="-topic robot_description -entity autonomous_robot" />

    <!-- RViz Launch -->
    <node pkg="rviz2" exec="rviz2" output="screen"
          args="-d $(var rviz_config_path)" />
</launch>
