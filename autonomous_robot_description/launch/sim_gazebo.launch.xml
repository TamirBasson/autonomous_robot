<launch>
    <!-- Define paths for URDF and RViz config -->
    <arg name="urdf_path" 
         default="$(find-pkg-share autonomous_robot_description)/urdf/autonomous_robot.urdf.xacro" />
         
    <arg name="rviz_config_path"
         default="$(find-pkg-share autonomous_robot_description)/rviz/urdf_config.rviz" />

    <!-- Robot State Publisher -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher" output="screen">
        <param name="robot_description" 
               value="$(command 'xacro $(var urdf_path)')" />
        <param name="use_sim_time" value="true"/>
    </node>

    <!-- Gazebo Launch -->
    <include file="$(find-pkg-share aws_robomaker_small_warehouse_world)/launch/no_roof_small_warehouse.launch.py">
        <arg name="world_name" value="$(find-pkg-share aws_robomaker_small_warehouse_world)/worlds/no_roof_small_warehouse.world" />
    </include>

    <!-- Joint State Publisher -->
    <node pkg="joint_state_publisher" exec="joint_state_publisher" output="screen">
        <param name="use_sim_time" value="true"/>
    </node>

    <!-- Spawn the robot entity in Gazebo -->
    <node pkg="gazebo_ros" exec="spawn_entity.py" 
          output="screen"
          args="-topic robot_description -entity autonomous_robot" />

    <!-- <node
        pkg="controller_manager"
        exec="ros2_control_node"
        output="screen"
        name="ros2_control_node">
        <param name="parameters" value="$(find autonomous_robot_description)/config/sim_joint_controller.yaml" />
        <remap from="~/robot_description" to="/robot_description" />
    </node> -->

    
    <!-- Spawning the differential controller -->
    <node
        pkg="controller_manager"
        exec="spawner"
        output="screen"
        args="diff_cont">
    </node> 

    <!-- Spawning the joint board controller -->
    <node
        pkg="controller_manager"
        exec="spawner"
        output="screen"
        args="joint_broad">
    </node> 

    <!-- RViz Launch -->
    <node pkg="rviz2" exec="rviz2" output="screen"
          args="-d $(var rviz_config_path)" />
</launch>
